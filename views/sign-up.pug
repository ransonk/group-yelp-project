extends layout.pug

block content
  div(class="sign-up-main-container")
    div(class="sign-up-container")
      div(class="errors-container")
      form(class="sign-up-form")
        div(class="form-group")
          label(for="firstName")
          input(id="firstName" type="text" name="firstName" placeholder="first name")
          label(for="lastName")
          input(id="lastName" type="text" name="lastName" placeholder="last name")
          div(class="form-group")
          label(for="email")
          input(id="email" type="email" name="email" placeholder="email address")
          div(class="form-group")
          label(for="password")
          input(id="password" type="password" name="password" placeholder="password")
          div(class="form-group")
          label(for="confirmPassword")
          input(id="confirmPassword" type="password" name="confirmPassword" placeholder="confirm password")
          div(class="form-group")
          label(for="businessOwner") Business Owner?
          select(name="businessOwner" required)
            option(value="" disabled selected) Choose One
            option(value="true" ) Yes
            option(value="false") No
        button(type="submit" class="sign-up-button")  sign up
    div(class="sign-up-side-picture-container")
  script(type="module" src="js/sign-up.js")
